[brightness]
command=$HOME/.config/i3/my-blocks/brightness.sh
label= 
# min_width= 100%
signal=2
interval=once

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label= 
interval=1
# min_width= 100.00%
#separator=false

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
# label=MEM
interval=1

[load_average]
label=LOAD 
interval=1

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
label=⚡
interval=10

# Date Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

# OpenVPN support
#
