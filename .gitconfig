[core]
	excludesfile = /Users/artem/.gitignore

[user]
	name = artemave
	email = artemave@gmail.com

[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  gdp = diff --color-words HEAD

  head = !git l -1
  h = !git head
  r = !git l -30
  ra = !git r --all
  la = !git l --all
	local = git @{u}..
	local = log @{u}..

[color]
  ui = auto

[merge]
  tool = vimdiff
[pull]
	rebase = true
[push]
	default = simple
